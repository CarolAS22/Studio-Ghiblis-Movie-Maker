@page
@model StudioGhibliMovieMaker.Pages.LoginModel
@{
}

<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row" style="padding:5px">
			<div class="col-3">
				<label asp-for="UsersDataModel.UserName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="UsersDataModel.UserName" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="UsersDataModel.UserName"></span>
		</div>
		<div class="form-group row" style="padding:5px">
			<div class="col-3">
				<label asp-for="UsersDataModel.Password"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="UsersDataModel.Password" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="UsersDataModel.Password"></span>
		</div>
		<div class="form-group row" style="padding:5px">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Login" />
			</div>
			<div class="col-5">

			</div>
		</div>
	</form>
</div>
